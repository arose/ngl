{
    "compilerOptions": {
        "target": "es6",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "lib": [ "es6", "DOM", "es2016" ],
        "outDir": "build/js",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [ "src/**/*", "lib/**/*" ]
}